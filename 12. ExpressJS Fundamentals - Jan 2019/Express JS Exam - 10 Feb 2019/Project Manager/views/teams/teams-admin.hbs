<h1>Teams</h1>
<h3>Manage Users</h3>
<div class="form">
  <form action="/teams/distribute" method="POST">
    <label>User</label>
    <select name="userId">
      {{#each users}}
        <option value="{{{_id}}}">{{firstName}} {{lastName}}</option>
      {{/each}}
    </select>

    <label>Team</label>
    <select name="teamId">
      {{#each teams}}
      <option value="{{{_id}}}">{{name}}</option>
      {{/each}}
    </select>
    <input type="submit" value="Distribute">
  </form>
</div>